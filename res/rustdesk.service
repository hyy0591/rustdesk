[Unit]
Description=CscpAssist
Requires=network.target
After=systemd-user-sessions.service

[Service]
Type=simple
ExecStart=/usr/bin/cscpassist --service
# kill --tray and --server both
ExecStop=pkill -f "cscpassist --"
# below two lines do not work, have to use above one line
#ExecStop=pkill -f "cscpassist --tray"
#ExecStop=pkill -f "cscpassist --server"
PIDFile=/run/cscpassist.pid
KillMode=mixed
TimeoutStopSec=30
User=root
LimitNOFILE=100000

[Install]
WantedBy=multi-user.target
